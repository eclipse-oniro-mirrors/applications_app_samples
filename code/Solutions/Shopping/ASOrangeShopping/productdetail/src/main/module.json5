{
  "module": {
    "name": "productdetail",
    "type": "feature",
    "description": "$string:detail_desc",
    "mainElement": "ProductDetailAbility",
    "deviceTypes": [
      "default",
      "tablet"
    ],
    "deliveryWithInstall": true,
    "installationFree": true,
    "pages": "$profile:main_pages",
    "abilities": [
      {
        "name": "ProductDetailAbility",
        "srcEntrance": "./ets/productdetailability/ProductDetailAbility.ets",
        "description": "$string:MainAbility_desc",
        "icon": "$media:icon",
        "launchType": "multiton",
        "label": "$string:MainAbility_label",
        "startWindowIcon": "$media:icon",
        "startWindowBackground": "$color:bg_transfer",
        "visible": true
      }
    ],
    "dependencies": [
      {
        "moduleName": "video"
      },
      {
        "moduleName": "shoppingdata"
      }
    ],
    "requestPermissions": [
      {
        "name": "ohos.permission.INTERNET",
        "usedScene": {
          "abilities": [
            "ProductDetailAbility"
          ],
          "when": "inuse"
        }
      }
    ]
  }
}