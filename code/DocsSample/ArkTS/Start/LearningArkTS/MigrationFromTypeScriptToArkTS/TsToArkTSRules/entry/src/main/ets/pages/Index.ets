// [Start sample_function]
function addTen(x: number): number {
  let ten = 10;
  return x + ten;
}
// [End sample_function]

@Entry
@Component
struct Index {
  @State message: string = '3 + 10';

  build() {
    RelativeContainer() {
      Button(this.message)
        .id('HelloWorld')
        .fontSize($r('app.float.page_text_font_size'))
        .fontWeight(FontWeight.Bold)
        .alignRules({
          center: { anchor: '__container__', align: VerticalAlign.Center },
          middle: { anchor: '__container__', align: HorizontalAlign.Center }
        })
        .onClick(() => {
          this.message = String(addTen(3));
        })
    }
    .height('100%')
    .width('100%')
  }
}