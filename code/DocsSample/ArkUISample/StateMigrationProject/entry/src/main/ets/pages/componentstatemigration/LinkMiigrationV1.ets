// [Start Parent7_start]
@Component
struct Child7 {
  // @Link可以双向同步数据
  @Link val: number;

  build() {
    Column() {
      Text('child: ' + this.val.toString())
      Button('+1')
        .onClick(() => {
          this.val++;
        })
    }
  }
}

@Entry
@Component
struct Parent7 {
  @State myVal: number = 10;

  build() {
    Column() {
      Text('parent: ' + this.myVal.toString())
      Child7({ val: this.myVal })
    }
  }
}
// [End Parent7_start]